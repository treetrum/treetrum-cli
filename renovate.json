{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":semanticCommitTypeAll(deps)",
        ":semanticCommitScopeDisabled"
    ],
    "semanticCommits": "enabled",
    "packageRules": [
        {
            "matchUpdateTypes": ["patch"],
            "automerge": true
        }
    ]
}
