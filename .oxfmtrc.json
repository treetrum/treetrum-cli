{
    "$schema": "./node_modules/oxfmt/configuration_schema.json",
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "experimentalSortImports": {
        "newlinesBetween": false
    },
    "experimentalSortPackageJson": false,
    "ignorePatterns": ["CHANGELOG.md", "renovate.json"],
    "jsxSingleQuote": false,
    "printWidth": 100,
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false,
    "overrides": [
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
